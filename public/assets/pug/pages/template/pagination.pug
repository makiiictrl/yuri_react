- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
- var height_equal          = true;
- var script2               = true;

//- mixin
include ../../mixins/mixin

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        include ../../components/header
        +left-header
        +breadcrumb(['Bonus UI','Pagination'],'Pagination')
        +right-header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              // simple pagination
              .col-md-6
                .card.height-equal.title-line
                  .card-header
                    h2 Default Pagination
                    p.f-m-light.mt-1
                    | If the pagination component is used to navigate between a set of search results, an appropriate label could be 
                    code aria-label="Search results pages"
                    | .
                  .card-body
                    nav(aria-label='Page navigation example')
                      ul.pagination.pagination-primary.pagin-border-primary
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
              // pagination with active and disabled state
              .col-md-6
                .card.height-equal.title-line
                  .card-header
                    h2 Pagination with Active and Disabled
                    p.f-m-light.mt-1
                      | Use 
                      code .disabled
                      |  for links that appear un-clickable and 
                      code .active
                      |  to indicate the current page.
                  .card-body
                    nav(aria-label='...')
                      ul.pagination.pagination-success.pagin-border-success
                        li.page-item.disabled
                          a.page-link(href='#!', tabindex='-1') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item.active
                          a.page-link(href='#!')
                            | 2 
                            span.sr-only (current)
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
              // pagination with icons
              .col-md-6
                .card.height-equal.title-line
                  .card-header
                    h2 Pagination with Icons
                    p.f-m-light.mt-1
                      | Use an icon or symbol in place of text for some pagination links.
                  .card-body
                    nav(aria-label='Page navigation example')
                      ul.pagination.pagination-secondary.pagin-border-secondary
                        li.page-item
                          a.page-link(href='#!', aria-label='Previous')
                            span(aria-hidden='true') «
                            span.sr-only Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') ...
                        li.page-item
                          a.page-link(href='#!') 20
                        li.page-item
                          a.page-link(href='#!', aria-label='Next')
                            span(aria-hidden='true') »
                            span.sr-only Next
              // Rounded Pagination
              .col-md-6
                .card.height-equal.title-line
                  .card-header
                    h2  Rounded Pagination
                    p.f-m-light.mt-1
                      | Used in rounded pagination.Use an icon or symbol in place of text for some pagination links.
                      code [.rounded-circle]
                  .card-body
                    nav(aria-label='Page navigation example')
                      ul.pagination.pagination-dark.pagin-border-dark.gap-2
                        li.page-item
                          a.page-link.rounded-circle(href='#!', aria-label='Previous')
                            span(aria-hidden='true') «
                            span.sr-only Previous
                        li.page-item
                          a.page-link.rounded-circle(href='#!') 1
                        li.page-item
                          a.page-link.rounded-circle(href='#!') 2
                        li.page-item
                          a.page-link.rounded-circle(href='#!') ...
                        li.page-item
                          a.page-link.rounded-circle(href='#!') 9
                        li.page-item
                          a.page-link.rounded-circle(href='#!', aria-label='Next')
                            span(aria-hidden='true') »
                            span.sr-only Next
              // pagination alignments
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Pagination Alignment
                    p.f-m-light.mt-1
                      | Change the alignment of pagination components with flexbox utilities. For example, with 
                      code .justify-content-center:
                      | .
                  .card-body
                    // left aligned pagination
                    nav.m-b-30(aria-label='Page navigation example')
                      ul.pagination.pagin-border-warning.pagination-warning
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
                    // center aligned pagination
                    nav.m-b-30(aria-label='Page navigation example')
                      ul.pagination.justify-content-center.pagin-border-danger.pagination-danger
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') I 
                        li.page-item.active
                          a.page-link(href='#!') II 
                        li.page-item
                          a.page-link(href='#!') III
                        li.page-item
                          a.page-link(href='#!') Next
                    // right aligned pagination
                    nav(aria-label='Page navigation example')
                      ul.pagination.justify-content-end.pagin-border-success.pagination-success
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') i 
                        li.page-item
                          a.page-link(href='#!') ii 
                        li.page-item
                          a.page-link(href='#!') iii
                        li.page-item
                          a.page-link(href='#!') Next
              // pagination sizing
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Pagination Sizing
                    p.f-m-light.mt-1
                      | Use 
                      code [pagination-lg/pagination-md/pagination-lg]
                      |  for additional sizes.
                  .card-body
                    // large size pagination
                    nav.m-b-30(aria-label='Page navigation example')
                      ul.pagination.pagination-lg.pagination-info.pagin-border-info
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
                    //medium size pagination
                    nav.m-b-30(aria-label='Page navigation example')
                      ul.pagination.pagination-md.pagination-info.pagin-border-info
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
                    // small size pagination
                    nav(aria-label='Page navigation example')
                      ul.pagination.pagination-sm.pagination-info.pagin-border-info
                        li.page-item
                          a.page-link(href='#!') Previous
                        li.page-item
                          a.page-link(href='#!') 1
                        li.page-item
                          a.page-link(href='#!') 2
                        li.page-item
                          a.page-link(href='#!') 3
                        li.page-item
                          a.page-link(href='#!') Next
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
