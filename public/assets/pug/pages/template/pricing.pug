                          li 15 Subdomains
                        .pricingtable-signup
                          a.btn.btn-primary.btn-lg(href='sign-up.html') Sign Up
                .card
                  .card-header 
                    h2 Simple Pricing Card
                  .card-body.pricing-content
                    .row.g-sm-4.g-3
                      .col-xl-3.col-sm-6.xl-50.box-col-6
                        .card.text-center.pricing-simple
                          .card-body
                            h3 Standard
                            h1 $15
                            h6.mb-0 our preferred plans
                          a.btn.btn-lg.btn-primary.btn-block(href='#!') Purchase
                      .col-xl-3.col-sm-6.xl-50.box-col-6
                        .card.text-center.pricing-simple
                          .card-body
