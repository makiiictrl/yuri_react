- var tree                  = true;
- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var script2               = true;
- var animate               = true;
- var scrollbar             = true;

//- mixin
include ../../mixins/mixin

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        include ../../components/header
        +left-header
        +breadcrumb(['Bonus UI','Tree View'],'Tree View')
        +right-header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              .col-md-6
                .card.title-line
                  .card-header
                    h2 Basic Tree
                    p.f-m-light.mt-1 
                      | Use the dynamic tree view with checkboxes.
                  .card-body
                    .tree-container
              .col-md-6
                .card.title-line
                  .card-header
                    h2 Disabled Tree
                    p.f-m-light.mt-1 
                      | Use the dynamic tree view with checkboxes.
                  .card-body
                    .disabled-container
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
