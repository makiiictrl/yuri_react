- var theme_customizer      = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
- var height_equal          = true;
- var script2               = true;

//- mixin
include ../../mixins/mixin

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        include ../../components/header
        +left-header
        +breadcrumb(['Bonus UI','Breadcrumb'],'Breadcrumb')
        +right-header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              // Basic Breadcrumb
              .col-sm-6
                .card.height-equal.title-line
                  .card-header
                    h2 Default Breadcrumb
                    p.f-m-light.mt-1
                      | You can set breadcrumb using 
                      code .breadcrumb 
                      |  class.
                  .card-body
                    nav.breadcrumb
                      a.breadcrumb-item(href='#!') Home
                      span.breadcrumb-item.active Ui Kits
                    nav.breadcrumb.m-0
                      a.breadcrumb-item(href='#!') Home
                      a.breadcrumb-item(href='#!') Ui Kits
                      span.breadcrumb-item.active Alert
              // default breadcrumb ends

              // Dividers Breadcrumbs
              .col-sm-6
                .card.height-equal.title-line
                  .card-header
                    h2 Divider Breadcrumb
                    p.f-m-light.mt-1
                      | You can set breadcrumb using 
                      code .breadcrumb-icon
                      |  class.
                  .card-body
                    nav.breadcrumb.breadcrumb-icon
                      a.breadcrumb-item(href='#!') Home
                      span.breadcrumb-item.active Ui Kits
                    nav.breadcrumb.breadcrumb-icon.m-0
                      a.breadcrumb-item(href='#!') Home
                      a.breadcrumb-item(href='#!') Ui Kits
                      span.breadcrumb-item.active Progress
              // Dividers Breadcrumbs ends

              // Icons breadcrumb start
              .col-sm-6
                .card.height-equal.title-line
                  .card-header
                    h2 With Icons Breadcrumb
                    p.f-m-light.mt-1
                      | You can set icons breadcrumb using 
                      code .breadcrumb 
                      | class.
                  .card-body
                    ol.breadcrumb.bg-white.p-l-0
                      li.breadcrumb-item
                        a(href='#!')
                          i.fa.fa-home
                      li.breadcrumb-item.active Bonus Ui
                    ol.breadcrumb.bg-white.m-b-0.p-b-0.p-l-0
                      li.breadcrumb-item
                        a(href='#!')
                          i.fa.fa-home
                      li.breadcrumb-item Bonus Ui
                      li.breadcrumb-item.active Breadcrumb
              // Icons breadcrumb ends

              // Nav breadcrumb start
              .col-sm-6
                .card.height-equal.title-line
                  .card-header
                    h2 Variation of Breadcrumb
                    p.f-m-light.mt-1
                      | You can set variations breadcrumb using 
                      code .breadcrumb 
                      | class through any icons sets.
                  .card-body.breadcrumb-space
                    nav.breadcrumb.breadcrumb-no-divider.mb-0.gap-2
                      a.breadcrumb-item.mb-1.mb-xl-0(href='#!') Home ->
                      a.breadcrumb-item.ps-0.mb-1.mb-xl-0(href='#!') Tables ->
                      a.breadcrumb-item.ps-0.mb-1.mb-xl-0(href='#!') Bootstrap Tables ->
                      span.breadcrumb-item.active.ps-0 Basic Tables
              // Nav breadcrumb ends

              // colored navigation start
              .col-sm-12
                .card.title-line
                  .card-header
                    h2 Colored Breadcrumb
                    p.f-m-light.mt-1
                      | You can set breadcrumb using 
                      code .breadcrumb 
                      |  class and set background colors like 
                      code [.bg-*]
                      |  .
                  .card-body
                    ol.breadcrumb.breadcrumb-colored.m-b-30.bg-primary
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Home
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Bonus Ui
                      li.breadcrumb-item.active.fw-bold Breadcrumb
                    ol.breadcrumb.breadcrumb-colored.m-b-30.bg-warning
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Home
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Icons
                      li.breadcrumb-item.active.fw-bold Flag-icon
                    ol.breadcrumb.breadcrumb-colored.m-0.bg-secondary
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Home
                      li.breadcrumb-item
                        a.fw-bold(href='#!') Gallery
                      li.breadcrumb-item.active.fw-bold Gallery-grid
              // colored navigation ends
              
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
