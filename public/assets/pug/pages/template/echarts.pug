- var theme_customizer      = true;
- var echart                = true;
- var echart_pie            = true;
- var page_echart           = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
- var script2               = true;

//- mixin
include ../../mixins/mixin

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        include ../../components/header
        +left-header
        +breadcrumb(['Charts','Echarts'],'Echarts')
        +right-header
      // Page Body Start
      .page-body-wrapper.sidebar-icon
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              .col-sm-12
                .card.title-line
                  .card-header
                    h2
                      | Basic Area Chart 
                  .card-body
                    #area-echart.apache-cotainer
              .col-xl-6.box-col-12
                .card.title-line
                  .card-header
                    h2 Area Pie Chart
                  .card-body
                    #echart-pie.apache-cotainer
              .col-xl-6.box-col-12
                .card.title-line
                  .card-header
                    h2 Bar Polar Chart
                  .card-body
                    #echart-polar.apache-cotainer
              .col-xl-12
                .card.title-line
                  .card-header
                    h2 Bar Chart
                  .card-body
                    #echart-bar.apache-cotainer-large    
              .col-xl-12
                .card.title-line
                  .card-header
                    h2 Bar Chart 2
                  .card-body
                    #echart-bar2.apache-cotainer-large
              .col-xl-6.box-col-12
                .card.title-line
                  .card-header
                    h2 Boxplot Chart
                  .card-body
                    #echart-boxplot.apache-cotainer.boxplot-cotainer
              .col-xl-6.box-col-12
                .card.title-line
                  .card-header
                    h2 Lines Clip Chart
                  .card-body.clip-chart-wrapper
                    #lines-clip.apache-cotainer
              .col-xl-12
                .card.title-line
                  .card-header
                    h2 Line Visual Chart
                  .card-body
                    #line-visual.apache-cotainer
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Angle Chart
                  .card-body
                    #texture-bar-by-clipPath.apache-cotainer 
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Gauge Chart
                  .card-body
                    #echart-gauge.apache-cotainer 
              .col-xl-12
                .card.title-line
                  .card-header
                    h2 Line Visual Chart 2
                  .card-body
                    #line-visulH.apache-cotainer 
              .col-xl-12
                .card.title-line
                  .card-header
                    h2 Pictorial Repeat Chart
                  .card-body
                    #dynamic-data.apache-cotainer
              .col-xl-6.xl-100.box-col-12
                .card.title-line
                  .card-header
                    h2 Radar Chart
                  .card-body
                    #echart-radar.apache-cotainer
              .col-xl-6.xl-100.box-col-12
                .card.title-line
                  .card-header
                    h2 Polar Line Chart
                  .card-body
                    #main0.apache-container.polar-line
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Pie Rich Text Chart
                  .card-body
                    #echart-pierich.apache-container
              .col-xl-6
                .card.title-line
                  .card-header
                    h2 Pictorial Single Chart
                  .card-body
                    #dotted.apache-container
              .col-xl-12
                .card.note.p-20.d-inline-block.w-100
                  |  Echarts for more options please refer 
                  a(href="https://echarts.apache.org/examples/en/index.html" target="_blank") echart Official site  
                  | And 
                  a(href="https://github.com/apache/echarts" target="_blank") githup link
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
