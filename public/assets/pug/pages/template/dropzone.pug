- var theme_customizer      = true;
- var tooltip               = true;
- var dropzone              = true;
- var sidebar               = true;
- var slick                 = true;
- var header_slider         = true;
- var animate               = true;
- var scrollbar             = true;
- var filepond              = true;
- var script2               = true;

//- mixin
include ../../mixins/mixin

doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/loader
    include ../../components/taptop
    // page-wrapper Start
    #pageWrapper.page-wrapper.compact-wrapper
      .page-header.row
        include ../../components/header
        +left-header
        +breadcrumb(['Bonus UI','Dropzone'],'Dropzone')
        +right-header
      // Page Body Start
      .page-body-wrapper
        include ../../components/sidebar
        .page-body
          // Container-fluid starts
          .container-fluid
            .row
              .col-lg-6
                .card.title-line
                  .card-header
                    h2 Default file upload
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a filepond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="no-preview")
              .col-lg-6
                .card.title-line
                  .card-header
                    h2 Image preview 
                    p.f-m-light.mt-1
                      | We use the create method to turn a
                      code  &lt;input type="file"&gt;
                      |  into a filepond drop area.
                      code [https://pqina.nl/filepond/]
                  .card-body
                    input(type='file' class="show-preview")
              .col-lg-6
                .card.title-line
                  .card-header 
                    h2 Single file upload
                    p.f-m-light.mt-1
                    | Use the 
                    code .dropzone 
                    |  class through create upload files.
                    code [https://www.dropzone.dev/].
                  .card-body
                    form#singleFileUpload.dropzone(action='/upload.php')
                      .dropzone-wrapper
                        .dz-message.needsclick
                          i.icon-cloud-up
                          h6 Drop files here or click to upload.
                          span.note.needsclick
                            | (This is just a demo dropzone. Selected files are 
                            strong not
                            |  actually uploaded.)
              .col-lg-6
                .card.title-line
                  .card-header
                    h2 Multi file upload
                    p.f-m-light.mt-1
                      | Use the 
                      code .dropzone 
                      |  class through create upload files.
                      code [https://www.dropzone.dev/].
                  .card-body
                    form#multiFileUpload.dropzone.dropzone-secondary(action='/upload.php')
                      .dz-message.needsclick
                        i.icon-cloud-up
                        h6 Drop files here or click to upload.
                        span.note.needsclick
                          | (This is just a demo dropzone. Selected files are 
                          strong not
                          |  actually uploaded.)
          // Container-fluid Ends
        include ../../components/footer
    include ../../components/footer-files
